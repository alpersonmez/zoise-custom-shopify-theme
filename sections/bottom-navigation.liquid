<nav class="mobile-bottom-nav">
  <div class="mobile-bottom-nav__interior">
    <ul class="mobile-bottom-nav__links">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'link' -%}
            <li class="mobile-bottom-nav__link">
              <a href="{{ block.settings.link_url }}" class="mobile-bottom-nav__link-item">
                {{ block.settings.link_title }}
              </a>
            </li>
        {%- endcase -%}
      {%- endfor -%}
    </ul>
  </div>
</nav>

<style>
  /* Mobile Bottom Nav Styles */
  .mobile-bottom-nav {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 6.5vw; /* Adjust height as needed */
    z-index: 100;
    background-color: rgba(230, 230, 230, 0.3);
    -webkit-backdrop-filter: blur(30px);
    backdrop-filter: blur(30px);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .mobile-bottom-nav__interior {
    width: 100%;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    padding: 0 1rem;
  }

  .mobile-bottom-nav__links {
    list-style: none;
    display: flex;
    gap: 2rem;
    padding: 0;
    margin: 0;
  }

  .mobile-bottom-nav__link {
    flex: 1;
    text-align: center;
  }

  .mobile-bottom-nav__link-item {
    text-decoration: none;
    font-size: 0.9rem;
    color: #000;
    font-weight: bold;
  }

  /* Hide Above 990px */
  @media screen and (min-width: 990px) {
    .mobile-bottom-nav {
      display: none;
    }
  }
</style>


{% schema %}
    {
      "name": "Bottom Navigation",
      "settings": [],
      "blocks": [
        {
          "type": "link",
          "name": "Link",
          "settings": [
            {
              "type": "url",
              "id": "link_url",
              "label": "Link URL"
            },
            {
              "type": "text",
              "id": "link_title",
              "label": "Link Title"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Bottom Navigation",
          "category": "Footer"
        }
      ]
    }
    {% endschema %}
    